// Modified to enable debugging using bazel

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Example (Debug)",
      "type": "shell",
      "command": "bazel build src/main:main -c dbg",
      "windows": {
        "command": "bazel build src/linked_list:main --experimental_enable_runfiles -c dbg"
      },
      "osx": {
        "command": "bazel build src/linked_list:main -c dbg --spawn_strategy=standalone",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ]
}